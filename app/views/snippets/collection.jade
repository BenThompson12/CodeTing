extends ../layout

block content

    div(style="text-align:center; padding-top:20px")
        button(type="button", onclick="location.href = '/';", class="btn btn-lg btn-default btn-primary")
            span(class="glyphicon glyphicon-home")
            |  CodeTing

    div(class="container-fluid", style="padding-top:20px")
        div(class="col-xs-6  col-xs-offset-3")

            div(class="panel panel-primary")
                    div(class="panel-heading")
                        h1(class="panel-title")
                            | Your Snippets

                    div(class="panel-body")

                        if (snippets.length == 0)
                            strong
                                | You havn't got any snippets in your collection yet!

                        ul(class="list-group")
                            each snippet, index in snippets
                                li(class="list-group-item")
                                        a(href="#" onclick="deleteSnippet('#{snippet.shortId}')")
                                            span(class="glyphicon glyphicon-trash") 

                                        | <a href=/#{snippet.shortId}> #{snippet.name} </a> <strong> #{snippet.language} </strong>
                                        | <div style="float: right;"> Last updated #{snippet.lastUpdated} </div>

                                        
                                        if (snippet.tags.length != 0)
                                            p
                                                each tag in snippet.tags
                                                    <span class="label label-info" style="margin: 1px"> #{tag} </span>

    script(src='/bindings/collection.js')
    script(src='/ajax/snippet.js')