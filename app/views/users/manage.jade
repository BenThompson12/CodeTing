extends ../layout

block content

	div(style="text-align:center; padding-top:20px")
		button(type="button", onclick="location.href = '/';", class="btn btn-lg btn-default btn-primary")
			span(class="glyphicon glyphicon-home")
			|  CodeTing

	div(class="container-fluid", style="padding-top:20px")
		div(class="col-xs-6  col-xs-offset-3")
			div(class="panel panel-primary")

				div(class="panel-heading")
					h1(class="panel-title")
						| Account Management

				div(class="panel-body")
					form
						div(class="well")
							strong
								| Change Display Name
							p

							div(class="form-group")
								input(type="text", name="displayname", class="form-control")

						div(class="well")
							strong
								| Change Password
							p

							div(class="form-group")
								input(type="text", name="displayname", placeholder="Current password", class="form-control")
							div(class="form-group")
								input(type="text", name="displayname", placeholder="New password", class="form-control")
							div(class="form-group")
								input(type="text", name="displayname", placeholder="New password again", class="form-control")

						
					button(type="submit", id="btn-save", style="display: block; float: right;" class="btn btn-default btn-primary")
						span(class="glyphicon glyphicon-user")
						|  Save Changes